<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css">
    <!-- Adding Font Awesome CDN for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        /* Additional styling can go here */
        .sidebar-link:hover {
            background-color: #eff6ff;
            padding-left: 1rem;
            border-radius: 0.375rem; /* 6px */
        }
        /* Footer stick to bottom */
        .sticky-footer-container {
            display: flex;
            flex-direction: column;
            height: 100vh;
        }
        .content-grow {
            flex-grow: 1;
        }
        /* Collapsible sidebar styles */
        #menu-toggle:checked + #menu {
            display: block;
        }
    </style>
</head>
<body class="bg-gray-100">

<div class="sticky-footer-container p-3 md:pl-6">


    <!-- Header with Menu Toggle for small screens -->
    <header class="bg-white shadow-md p-4 flex justify-between items-center md:hidden">
        <div class="text-2xl font-semibold text-blue-700">MentorMeU</div>
        <label for="menu-toggle" class="cursor-pointer">
            <i class="fas fa-bars"></i>
        </label>
        <input class="hidden" type="checkbox" id="menu-toggle">
    </header>

    <div class="flex flex-1 overflow-hidden">

        <!-- Sidebar section -->
        <div class="bg-white rounded-lg shadow-md p-4 w-64 md:w-1/6 mb-5 md:mb-0 mr-4 hidden md:block">
          
        <div class="text-2xl font-semibold text-blue-700 mb-6">MentorMeU</div>
        <ul class="fa-ul">
            <li class="mb-2">
                <a href="/student/dashboard" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-tachometer-alt mr-2"></i> Dashboard
                </a>
            </li>
            <li class="mb-2">
                <a href="/student/my-opportunities" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-briefcase mr-2"></i> Opportunities
                </a>
            </li>
 
  <li class="mb-2">
    <a href="/student/mentors" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
        <i class="fa-li fas fa-user-friends mr-2"></i> Mentors
    </a>
</li>
<li>
    <a href="/auth/logout" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
        <i class="fa-li fas fa-sign-out-alt mr-2"></i> Logout
    </a>
</li>

        </ul>
    </div>

        <div id="menu" class="bg-white rounded-lg shadow-md p-4 absolute w-full md:hidden hidden">
        <ul class="fa-ul">
            <li class="mb-2">
                <a href="/student/dashboard" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-tachometer-alt mr-2"></i> Dashboard
                </a>
            </li>
            <li class="mb-2">
                <a href="/student/my-opportunities" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-briefcase mr-2"></i> Opportunities
                </a>
            </li>
     
            <li class="mb-2">
                <a href="/student/mentors" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-inbox mr-2"></i> Mentors
                </a>
            </li>
            <li>
                <a href="/auth/logout" class="text-blue-600 hover:text-blue-800 sidebar-link flex items-center">
                    <i class="fa-li fas fa-cog mr-2"></i> Logout
                </a>
            </li>
        </ul>
        </div>

    <!-- Right section -->
    <div class="flex-1 overflow-auto">

<!-- Welcome hero section -->
<div class="bg-blue-100 p-4 mb-4 rounded-lg shadow-md mt-4 sm:mt-8">
    <h2 class="text-xl font-semibold">Welcome Roselyne Abdalla Osundwa</h2>
</div>



<!-- Main content area -->
<div class="container mx-auto px-4">
    <!-- Section Heading -->
    <h1 class="text-2xl font-semibold my-4">Mock Interview Opportunities</h1>

    <!-- Opportunities Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {{#mockInterviewOpportunities}}
            <!-- Opportunity Card -->
            <div class="bg-white rounded-lg shadow-md p-6 mb-6 transition ease-in-out duration-300 transform hover:shadow-lg">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Mock Interview Icon -->
                    <div class="col-span-1 md:col-span-3 p-4 border-2 border-dashed border-purple-200 rounded-lg text-center">
                        <div class="mb-4">
                            <i class="fas fa-comments text-purple-600 bg-purple-100 rounded-full text-4xl p-4"></i>
                        </div>
                        <h2 class="text-lg font-semibold">{{ category }}</h2>
                        <p>{{ description }}</p>
                        <div class="mt-4 text-sm text-gray-600">
                            Mentor: {{ mentor.name }}<br>
                            Date: {{ formatDate date }}<br>
                            Status: {{ status }}
                        </div>
                        <div class="flex justify-center mt-4">
                            {{#joined}}
                                <button type="button" class="mt-4 bg-gray-300 text-gray-600 font-bold py-2 px-4 rounded" disabled>
                                    Joined
                                </button>
                            {{/joined}}
                            {{^joined}}
                                <form action="/student/join-opportunity/{{_id}}" method="post" class="join-opportunity-form">
                                    <button type="submit" class="mt-4 bg-purple-600 bg-opacity-20 hover:bg-opacity-30 text-purple-600 hover:text-purple-700 font-bold py-2 px-4 rounded">
                                        Join
                                    </button>
                                </form>
                            {{/joined}}
                        </div>
                    </div>
                </div>
            </div>
        {{/mockInterviewOpportunities}}
    </div>

    <!-- No Opportunities Message -->
    {{^mockInterviewOpportunities}}
        <p class="text-center text-gray-600">No mock interview opportunities are available at the moment.</p>
    {{/mockInterviewOpportunities}}
</div>




<!-- Footer section -->
        <div class="bg-white rounded-lg shadow-md p-4 text-center mt-auto">
            <p class="text-blue-600">&copy; 2023 Coaching Platform</p>
        </div>

    </div>

</div>
<script>
    // Add an event listener for all forms with the class 'join-opportunity-form'
document.querySelectorAll('.join-opportunity-form').forEach(form => {
    form.addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the form from submitting the traditional way

        const button = this.querySelector('button'); // Get the button within the form

        fetch(this.action, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                // Add your authentication headers here
                // 'Authorization': 'Bearer ' + token, // if you're using token-based authentication
            },
            // No need to send body data for this request, but you could if needed
        })
        .then(response => {
            if (response.ok) {
                return response.json();
            }
            throw new Error('Network response was not ok.');
        })
        .then(data => {
            console.log(data.message);
            // Here you can change the button's appearance and disable it
            button.textContent = 'Joined'; // Update button text
            button.classList.remove('bg-blue-600', 'hover:bg-opacity-30', 'text-blue-600', 'hover:text-blue-700'); // Remove join styles
            button.classList.add('bg-gray-400', 'text-gray-600'); // Add joined styles
            button.disabled = true; // Disable the button
        })
        .catch(error => {
            console.error('There has been a problem with your fetch operation:', error);
        });
    });
});

</script>

</body>
</html>

